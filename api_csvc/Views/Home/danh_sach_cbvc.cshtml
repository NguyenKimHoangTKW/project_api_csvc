@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="main-content">
    <div class="card">
        <div class="card-body">
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="true">Danh sách tài khoản</a>
                </li>
            </ul>
            <div class="tab-content m-t-15" id="myTabContent">
                <!-- Thống kê kết quả khảo sát -->
                <div class="tab-pane fade show active" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                    <div class="page-header no-gutters">
                        <h2 class="text-uppercase">Danh sách tài khoản</h2>
                        <fieldset class="border rounded-3 p-3">
                            <legend class="float-none w-auto px-3">Chức năng</legend>
                            @*<div class="row mb-3">
                                    <div class="col-12 col-md-6 mb-3">
                                        <label class="form-label" style="font-size: 16px; font-weight: bold; color: #333;">Chọn hệ đào tạo</label>
                                        <select class="form-control select2" id="hedaotao">
                                            <option value="item.Value">item.Text</option>
                                        </select>
                                    </div>
                                    <div class="col-12 col-md-6 mb-3">
                                        <label class="form-label" style="font-size: 16px; font-weight: bold; color: #333;">Chọn phiếu khảo sát</label>
                                        <select class="form-control select2" id="surveyid">
                                            <option value="">Chọn hệ đào tào và năm để thống kê</option>
                                        </select>
                                    </div>
                                </div>*@
                            <div class="row">
                                <div class="col-12 d-flex flex-wrap gap-2 justify-content-start justify-content-md-end">
                                    <button class="btn btn-info" id="addnew">
                                        <i class="fas fa-plus mr-1"></i> Thêm mới CBVC
                                    </button>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                    <!--Modal-->
                    <div class="modal fade bd-example-modal-lg">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title h4" id="title_modal"><!----></h5>
                                    <button type="button" class="close" data-dismiss="modal">
                                        <i class="anticon anticon-close"></i>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <form id="form-validation">
                                        <div class="form-group row">
                                            <label class="col-sm-2 col-form-label control-label">Tên cán bộ viên chức *</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control" id="ten-cbvc-val" placeholder="Nhập tên cán bộ viên chức">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-sm-2 col-form-label control-label">Email *</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control" id="email-val" placeholder="Nhập Email *">
                                            </div>
                                        </div>
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <!---->
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--End Modal-->
                    <div id="loadingSpinner" style="display:none" class="loader"></div>
                    <div class="m-t-25">
                        <div class="table-responsive">
                            <table id="data-table" class="table table-bordered">
                                <!---->
                            </table>
                        </div>
                    </div>
                </div>
                <!-- End Thống kê -->
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/Scripts/Admin/DanhSachCBVC.js"></script>
}


