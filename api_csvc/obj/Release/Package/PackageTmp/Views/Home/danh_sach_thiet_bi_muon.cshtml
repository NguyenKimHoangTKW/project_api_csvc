@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="main-content">
    <div class="card">
        <div class="card-body">
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="true">Danh sách các thiết bị mượn</a>
                </li>
            </ul>
            <div class="tab-content m-t-15" id="myTabContent">
                <!-- Thống kê kết quả khảo sát -->
                <div class="tab-pane fade show active" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                    <div class="page-header no-gutters">
                        <h2 class="text-uppercase">Danh sách các thiết bị mượn</h2>
                        <fieldset class="border rounded-3 p-3">
                            <legend class="float-none w-auto px-3">Chức năng</legend>
                        </fieldset>
                    </div>
                    <!--Modal-->
                    <div class="modal fade bd-example-modal-lg">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title h4" id="title_modal"><!----></h5>
                                    <button type="button" class="close" data-dismiss="modal">
                                        <i class="anticon anticon-close"></i>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <form id="form-validation">
                                        <div class="form-group row">
                                            <label class="col-sm-2 col-form-label control-label">Tên thiết bị *</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control" id="thiet-bi-val" placeholder="Nhập tên thiết bị" readonly>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-sm-2 col-form-label control-label">Trạng thái</label>
                                            <div class="col-sm-10">
                                                <select class="form-control select2" id="trang_thai-val">
                                                    @foreach (var item in ViewBag.TrangThai)
                                                    {
                                                        <option value="@item.Text">@item.Text</option>
                                                    }
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-sm-2 col-form-label control-label">Mô tả (hoặc lý do hủy)</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control" id="mo-ta-val" placeholder="Trạng thái (hoặc lý do hủy)">
                                            </div>
                                        </div>
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <!---->
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--End Modal-->
                    <div id="loadingSpinner" style="display:none" class="loader"></div>
                    <div class="m-t-25">
                        <div class="table-responsive">
                            <table id="data-table" class="table table-bordered">
                                <!---->
                            </table>
                        </div>
                    </div>
                </div>
                <!-- End Thống kê -->
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/Scripts/Admin/DanhSachThietBiMuon.js"></script>
}